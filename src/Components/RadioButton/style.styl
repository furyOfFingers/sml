.container-radio-button
  display flex
  margin 30px 25px 24px 0
  & span
    margin-left 8px
    font bold normal normal 14px/17px Roboto, sans-serif
    color rgb(51, 51, 51)
    &:hover
      cursor grab

.wrapper-check-mark
  display block
  position relative
  width 15px
  height 15px
  border 1px solid rgb(51, 51, 51)
  border-radius 8px
  outline none
  &:hover
    cursor pointer

.check-mark
  display none
  top 3px
  left 3px
  position relative
  width 9px
  height 9px
  border-radius 4px
  background-color rgb(51, 51, 51)

.checked
  display block
